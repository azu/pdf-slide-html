{
  "name": "pdf-slide-html",
  "description": "generator for slide-pdf.js",
  "version": "2.2.1",
  "homepage": "https://github.com/azu/pdf-slide-html/",
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/pdf-slide-html.git"
  },
  "main": "index.js",
  "bin": {
    "pdf-slide-html": "bin/cmd.js"
  },
  "scripts": {
    "deploy": "gh-pages -d public/",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\""
  },
  "directories": {
    "test": "test/"
  },
  "files": [
    "bin",
    "lib",
    "template"
  ],
  "author": "azu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/azu/pdf-slide-html/issues"
  },
  "dependencies": {
    "dateformat": "^3.0.3",
    "get-md-title": "^1.0.4",
    "mustache": "^3.0.1",
    "optionator": "^0.8.2",
    "safe-marked": "^1.0.1"
  },
  "devDependencies": {
    "gh-pages": "^2.1.1",
    "github-markdown-css": "^3.0.1",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2"
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 4
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
